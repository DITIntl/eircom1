<?xml version="1.0"?>
<odoo>
    <record id="inherit_employee_contracts_form_view_erpify" model="ir.ui.view">
        <field name="name">employee_contracts.form.erpify</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='public']" position="after">
                <page name="contracts_history_erpify" string="Contracts History" groups="hr.group_hr_user">
                    <group>
                        <field name="contract_ids" readonly="1" nolabel="1">
                            <tree>
                                <field name="date_start"/>
                                <field name="date_end"/>
                                <field name="x_basic_db"/>
                                <field name="x_basic_non_db"/>
                                <field name="wage"/>
                                <field name="name" string="Description"/>
                                <field name="x_pay_group" optional="hide"/>
                                <field name="x_scale_point" optional="hide"/>
                                <field name="x_grade" optional="hide"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="inherit_res_partner_type_payment_form_view_erpify" model="ir.ui.view">
        <field name="name">res_partner_type.payment.form.erpify</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="domain">[('type_erpify','=',partner_type)]</attribute>
            </xpath>
        </field>
    </record>

    <record id="inherit_res_user_warehouse_addition_form_view_erpify" model="ir.ui.view">
        <field name="name">res user.warehouse.form.erpify</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tz']" position="after">
                <field name="warehouse_id_erpify"/>
            </xpath>
        </field>
    </record>
</odoo>